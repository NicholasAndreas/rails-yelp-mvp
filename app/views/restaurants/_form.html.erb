<%= simple_form_for(@restaurant) do |f| %>

<% if @restaurant.errors.any? %>
   <ul>
    <% @restaurant.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
   </ul>
  <% end %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phonenumber %>
    <%= f.input :category %>
    <%= f.input :reviews %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
